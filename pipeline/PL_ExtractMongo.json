{
	"name": "PL_ExtractMongo",
	"properties": {
		"activities": [
			{
				"name": "LoadGarage",
				"description": "Cargar el documento de Garage",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "MongoDbAtlasSource",
						"batchSize": 100
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings",
							"copyBehavior": "FlattenHierarchy"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".csv"
						}
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "$['_id']['$oid']"
								},
								"sink": {
									"name": "$oid"
								}
							},
							{
								"source": {
									"path": "$['Order']['$numberLong']"
								},
								"sink": {
									"name": "Order_$numberLong"
								}
							},
							{
								"source": {
									"path": "$['PID']['$numberLong']"
								},
								"sink": {
									"name": "PID_$numberLong"
								}
							},
							{
								"source": {
									"path": "$['Garage Type']"
								},
								"sink": {
									"name": "Garage Type"
								}
							},
							{
								"source": {
									"path": "$['Garage Yr Blt']['$numberLong']"
								},
								"sink": {
									"name": "Garage Yr Blt_$numberLong"
								}
							},
							{
								"source": {
									"path": "$['Garage Finish']"
								},
								"sink": {
									"name": "Garage Finish"
								}
							},
							{
								"source": {
									"path": "$['Garage Cars']['$numberLong']"
								},
								"sink": {
									"name": "Garage Cars_$numberLong"
								}
							},
							{
								"source": {
									"path": "$['Garage Area']['$numberLong']"
								},
								"sink": {
									"name": "Garage Area_$numberLong"
								}
							},
							{
								"source": {
									"path": "$['Garage Qual']"
								},
								"sink": {
									"name": "Garage Qual"
								}
							},
							{
								"source": {
									"path": "$['Garage Cond']"
								},
								"sink": {
									"name": "Garage Cond"
								}
							}
						]
					}
				},
				"inputs": [
					{
						"referenceName": "ds_mongo_garage",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "garage_prueba",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}